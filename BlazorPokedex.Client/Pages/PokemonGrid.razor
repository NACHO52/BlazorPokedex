@using Models


<h3>PokemonGrid</h3>

@if (Pokemons == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        @for (int i = 0; i < NumberOfRows; i++)
        {
            <div class="row">
                @foreach (Pokemon pokemon in Pokemons.Skip(i * 6).Take(6))
                {
                    <div class="card pokeCard mb-4 bg-@(pokemon.Types.FirstOrDefault().PokemonType.Name)">
                        <div class="card-body">
                            <h4 class="card-body">@pokemon.Name</h4>
                            <img src="@pokemon.Sprite.Front" class="img-fluid" alt="@pokemon.Name" />
                        </div>

                        <div class="moreInfo">
                            <span class="badge border rounded-pill bg-@(pokemon.Types.FirstOrDefault().PokemonType.Name)">
                                <a href="/pokeDetails/@pokemon.Name">More info</a>
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}


@code {
    [Parameter]
    public IEnumerable<Pokemon> Pokemons { get; set; }
    [Parameter]
    public int NumberOfRows { get; set; }
}
